// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id              String   @id @default(cuid())
  username        String   @unique
  password        String
  exp             Int      @default(0)
  streakDays      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  authoredCourses Course[] @relation("AuthoredCourses")
  enrolledCourses Course[] @relation("EnrolledCourses")
}

model Course {
  id           String   @id @default(cuid())
  title        String
  description  String
  level        String
  category     String
  duration     String
  studentCount Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  author       User     @relation("AuthoredCourses", fields: [authorId], references: [id])
  authorId     String
  participants User[]   @relation("EnrolledCourses")
  topics       Topic[]
}

model Topic {
  id       String  @id @default(cuid())
  title    String
  content  String?
  order    Int
  status   String  @default("PENDING")
  courseId String
  course   Course  @relation(fields: [courseId], references: [id])
  quiz     Quiz?
}

model Quiz {
  id        String   @id @default(cuid())
  title     String
  questions String
  topicId   String   @unique
  topic     Topic    @relation(fields: [topicId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
